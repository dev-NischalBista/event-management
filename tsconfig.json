{
  "compilerOptions": {
    "target": "es2016",
    "module": "NodeNext", // ✅ changed
    "moduleResolution": "NodeNext", // ✅ added
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "rootDir": "src",
    "outDir": "dist"
  },
  "include": ["src/**/*"]
}
